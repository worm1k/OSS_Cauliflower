<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">


    <welcome-file-list>
        <welcome-file>home.jsp</welcome-file>
    </welcome-file-list>
    
    <servlet>
        <servlet-name>ReportGenerator</servlet-name>
        <servlet-class>com.naukma.cauliflower.reports.ReportGeneratorServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ReportGenerator</servlet-name>
        <url-pattern>/reports</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>Login</servlet-name>
    <servlet-class>com.naukma.cauliflower.controllers.LoginController</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <mime-mapping>
        <extension>xls</extension>
        <mime-type>application/vnd.ms-excel</mime-type>
    </mime-mapping>
    
    
    <servlet>
        <servlet-name>auth</servlet-name>
        <jsp-file>/auth.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>auth</servlet-name>
        <url-pattern>/auth</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>ProceedOrder</servlet-name>
        <servlet-class>com.naukma.cauliflower.controllers.ProceedOrderController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ProceedOrder</servlet-name>
        <url-pattern>/proceed</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>InstallationTasks</servlet-name>
        <servlet-class>com.naukma.cauliflower.controllers.InstallationTasksController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>InstallationTasks</servlet-name>
        <url-pattern>/installationController</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ProvisioningTasks</servlet-name>
        <servlet-class>com.naukma.cauliflower.controllers.ProvisioningTaskController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ProvisioningTasks</servlet-name>
        <url-pattern>/provisioningController</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>CustomerUserInformationController</servlet-name>
        <servlet-class>com.naukma.cauliflower.controllers.CustomerUserInformationController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CustomerUserInformationController</servlet-name>
        <url-pattern>/customer_info</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>SiSODashboard</servlet-name>
        <servlet-class>com.naukma.cauliflower.controllers.SISODashboardController</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>SiSODashboard</servlet-name>
        <url-pattern>/dashboard</url-pattern>
    </servlet-mapping>
    
    
    <servlet>
        <servlet-name>TaskManager</servlet-name>
    <servlet-class>com.naukma.cauliflower.controllers.TaskManager</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>TaskManager</servlet-name>
        <url-pattern>/manageTask</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Registration</servlet-name>
        <servlet-class>com.naukma.cauliflower.controllers.RegistrationController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Registration</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>GetServiceController</servlet-name>
        <servlet-class>com.naukma.cauliflower.controllers.GetServicesController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GetServiceController</servlet-name>
        <url-pattern>/services</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>NewOrderController</servlet-name>
        <servlet-class>com.naukma.cauliflower.controllers.NewOrderController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>NewOrderController</servlet-name>
        <url-pattern>/new</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>BlockAccountController</servlet-name>
        <servlet-class>com.naukma.cauliflower.controllers.BlockAccountController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>BlockAccountController</servlet-name>
        <url-pattern>/blockacc</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ChangeCustomerPassword</servlet-name>
        <servlet-class>com.naukma.cauliflower.controllers.ChangeCustomerPassword</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ChangeCustomerPassword</servlet-name>
        <url-pattern>/changepass</url-pattern>
    </servlet-mapping>



    <servlet>
        <servlet-name>LogoutController</servlet-name>
        <servlet-class>com.naukma.cauliflower.controllers.LogoutController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LogoutController</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>GetTasksController</servlet-name>
        <servlet-class>com.naukma.cauliflower.controllers.GetTasksController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GetTasksController</servlet-name>
        <url-pattern>/gettasks</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>instengdashboard</servlet-name>
        <jsp-file>/instengdashboard.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>instengdashboard</servlet-name>
        <url-pattern>/instengdashboard</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>GetAllCustomersController</servlet-name>
        <servlet-class>com.naukma.cauliflower.controllers.GetAllCustomersController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GetAllCustomersController</servlet-name>
        <url-pattern>/getallcustomers</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>ReportsPagingController</servlet-name>
        <servlet-class>com.naukma.cauliflower.controllers.ReportsPagingController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ReportsPagingController</servlet-name>
        <url-pattern>/reportspaging</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>AmountOfLinesInReportController</servlet-name>
        <servlet-class>com.naukma.cauliflower.controllers.AmountOfLinesInReportController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AmountOfLinesInReportController</servlet-name>
        <url-pattern>/amountoflines</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>TaskInformationController</servlet-name>
        <servlet-class>com.naukma.cauliflower.controllers.TaskInformationController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>TaskInformationController</servlet-name>
        <url-pattern>/taskinfo</url-pattern>
    </servlet-mapping>

    <filter>
        <filter-name>Filter</filter-name>
        <filter-class>com.naukma.cauliflower.filters.CustomerSupportEngineerFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>Filter</filter-name>
        <url-pattern>/cse_dashboard.jsp</url-pattern>
        <url-pattern>/cse_dashboard_user.jsp</url-pattern>
    </filter-mapping>
    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>
</web-app>